{
  "name": "@nest-toolbox/bunyan-logger",
  "version": "0.0.0",
  "description": "nestjs toolbox",
  "author": "bogdanlupu <lupu60@gmail.com>",
  "homepage": "https://github.com/lupu60/nestjs-toolbox/tree/master/packages/bunyan-logger#readme",
  "license": "MIT",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lupu60/nestjs-toolbox.git"
  },
  "engines": {
    "node": "12",
    "npm": "6"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "bugs": {
    "url": "https://github.com/lupu60/nestjs-toolbox/issues"
  },
  "dependencies": {
    "@nestjs/common": "^7.2.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/platform-express": "^7.2.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "chalk": "^4.1.0",
    "lodash-es": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@types/express": "4.16.1",
    "@types/jest": "^25.1.3",
    "@types/node": "12.12.14",
    "@types/bunyan": "^1.8.6",
    "rimraf": "~3.0.2",
    "typescript": "~3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
